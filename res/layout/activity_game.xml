<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true">

        <com.princedragons.geoexpert.GeoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number Wrong:"
            android:textSize="30sp"
            android:textColor="#ff6a00"
            android:layout_marginRight="5dp"/>

        <ImageView
            android:id="@+id/ind1"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:background="@drawable/indicator_off"/>
        <ImageView
            android:id="@+id/ind2"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:scaleType="fitXY"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/indicator_off"/>
        <ImageView
            android:id="@+id/ind3"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:background="@drawable/indicator_off"/>
        <ImageView
            android:id="@+id/ind4"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:background="@drawable/indicator_off"/>
        <ImageView
            android:id="@+id/ind5"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:background="@drawable/indicator_off"/>
        
    </LinearLayout>

    <com.princedragons.geoexpert.GeoTextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Large Text"
        android:textColor="#060"
        android:layout_marginBottom="30dp"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answerField"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Enter" />

    <EditText
        android:id="@+id/answerField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Answer"
        android:imeOptions="actionGo"
        android:singleLine="true"/>

    <com.princedragons.geoexpert.GeoTextView
        android:id="@+id/game_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Question "
        android:textSize="40sp"/>
    
    <com.princedragons.geoexpert.GeoTextView
        android:id="@+id/capital_question_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="40sp"
        android:text="What state has this capital?"
        android:layout_above="@id/questionText"
        android:layout_marginBottom="20dp"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/main_question_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/questionText"
        android:layout_below="@id/game_title_text"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/alabama"
        android:scaleType="center" />

    <com.princedragons.geoexpert.GeoTextView
        android:id="@+id/scoreText"
        android:textSize="30sp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:text="Score: 0"
        android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
